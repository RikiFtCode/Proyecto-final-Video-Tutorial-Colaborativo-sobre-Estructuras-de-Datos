
class Solution {
    public int calPoints(String[] operations) {
        Stack<Integer> stack = new Stack<>();

        for (String op : operations) {
            switch (op) {
                case "+":
                    int last = stack.pop();
                    int newScore = last + stack.peek();
                    stack.push(last);
                    stack.push(newScore);
                    break;
                case "D":
                    stack.push(stack.peek() * 2);
                    break;
                case "C":
                    stack.pop();
                    break;
                default:
                    stack.push(Integer.parseInt(op));
                    break;
            }
        }
        int total = 0;
        for (int score : stack) {
            total += score;
        }
        return total;
    }
}

